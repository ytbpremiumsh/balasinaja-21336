<%- include('partials/header') %>

<div class="row">
  <div class="col-12">
    <!-- Form Add New -->
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Tambah Trigger Baru</h5>
      </div>
      <div class="card-body">
        <form action="/autoreplies/add" method="POST">
          <div class="row g-3">
            <div class="col-md-3">
              <label class="form-label">Trigger (kata kunci)</label>
              <input type="text" name="trigger" class="form-control" placeholder="contoh: info" required>
            </div>
            <div class="col-md-2">
              <label class="form-label">Tipe Pesan</label>
              <select name="message_type" class="form-select" required>
                <option value="text" selected>Text</option>
                <option value="image">Image</option>
                <option value="document">Document</option>
              </select>
            </div>
            <div class="col-md-4">
              <label class="form-label">Isi Pesan</label>
              <textarea name="content" class="form-control" rows="1" placeholder="Balasan otomatis. Gunakan {NAME} dan {PHONE}" required></textarea>
            </div>
            <div class="col-md-3">
              <label class="form-label">URL Media (opsional)</label>
              <input type="url" name="url_image" class="form-control" placeholder="https://...">
            </div>
          </div>
          <div class="mt-3">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-save"></i> Simpan Trigger
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- List Autoreplies -->
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Daftar Autoreply Triggers</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Trigger</th>
                <th>Tipe</th>
                <th>Konten</th>
                <th>URL Media</th>
                <th>Dibuat</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (autoreplies.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-chat-left fs-1"></i>
                    <p class="mt-2">Belum ada trigger. Tambahkan trigger pertama Anda di atas!</p>
                  </td>
                </tr>
              <% } else { %>
                <% autoreplies.forEach(ar => { %>
                  <tr>
                    <td><%= ar.id %></td>
                    <td><strong><%= ar.trigger %></strong></td>
                    <td><span class="badge bg-info"><%= ar.message_type %></span></td>
                    <td>
                      <div class="message-preview"><%= ar.content %></div>
                    </td>
                    <td>
                      <% if (ar.url_image) { %>
                        <a href="<%= ar.url_image %>" target="_blank" class="text-decoration-none">
                          <i class="bi bi-link-45deg"></i> Link
                        </a>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                    <td class="text-nowrap">
                      <small><%= new Date(ar.created_at).toLocaleDateString('id-ID') %></small>
                    </td>
                    <td>
                      <form action="/autoreplies/delete/<%= ar.id %>" method="POST" style="display:inline;" 
                            onsubmit="return confirm('Hapus trigger ini?')">
                        <button type="submit" class="btn btn-sm btn-danger">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
