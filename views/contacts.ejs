<%- include('partials/header') %>

<div class="row">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-people"></i> Daftar Kontak</h5>
      </div>
      <div class="card-body">
        <p class="text-muted">
          Kontak yang pernah mengirim pesan ke sistem autoreply ini. 
          Kontak otomatis disimpan saat pesan pertama diterima.
        </p>
        
        <div class="table-responsive">
          <table class="table table-hover table-striped">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>Nomor Telepon</th>
                <th>Nama</th>
                <th>Ditambahkan</th>
              </tr>
            </thead>
            <tbody>
              <% if (contacts.length === 0) { %>
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">
                    <i class="bi bi-person-plus fs-1"></i>
                    <p class="mt-2">Belum ada kontak tersimpan</p>
                  </td>
                </tr>
              <% } else { %>
                <% contacts.forEach(contact => { %>
                  <tr>
                    <td><%= contact.id %></td>
                    <td>
                      <strong><%= contact.phone %></strong>
                    </td>
                    <td><%= contact.name || '-' %></td>
                    <td class="text-nowrap">
                      <small><%= new Date(contact.created_at).toLocaleString('id-ID') %></small>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
        
        <% if (contacts.length > 0) { %>
          <div class="mt-3">
            <div class="alert alert-info">
              <i class="bi bi-info-circle"></i>
              <strong>Total Kontak:</strong> <%= contacts.length %> kontak tersimpan
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
